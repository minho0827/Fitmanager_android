<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            android:layout_marginTop="@dimen/profileMarginTop"
            android:background="@drawable/xml_video_preview" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/xml_keyword"
                    android:paddingBottom="2.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2.5dp"
                    android:text="요가"
                    android:textColor="#000000"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/sub_category01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/xml_keyword"
                    android:paddingBottom="2.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2.5dp"
                    android:text="체형교정"
                    android:textColor="#000000"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/sub_category02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/xml_keyword"
                    android:paddingBottom="2.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2.5dp"
                    android:text="체중감량"
                    android:textColor="#000000"
                    android:textSize="10sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:maxLength="18"
                android:text="3주만에 애플힙 만들기 운동"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileRowTextSize" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="운동 강도"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/img_level_star_01"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/star_yellow" />

                <ImageView
                    android:id="@+id/img_level_star_02"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/star_yellow" />

                <ImageView
                    android:id="@+id/img_level_star_03"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/star_yellow" />

                <ImageView
                    android:id="@+id/img_level_star_04"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/star_yellow" />

                <ImageView
                    android:id="@+id/img_level_star_05"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/star_gray" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_gravity="bottom"
        android:background="@android:color/black" />


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 등록된 비디오가 없습니다." />

    </FrameLayout>
</FrameLayout>