<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maincolor"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="개인정보"
            android:textColor="@color/color_primary_blue"
            app:fontPath="fonts/NanumSquareOTFRegular.otf" />


        <FrameLayout
            android:id="@+id/frame_layout_profile_img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/person" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="편집"
                android:textColor="@color/color_primary_blue"
                app:fontPath="fonts/NanumSquareOTFRegular.otf" />


        </FrameLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@null"
                app:fontPath="fonts/NanumSquareOTFRegular.otf" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="이메일"
                android:textColor="@color/color_primary_blue"
                app:fontPath="fonts/NanumSquareOTFRegular.otf" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2234@test.test"
                android:textSize="20dp"
                app:fontPath="fonts/NanumSquareOTFRegular.otf" />

        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="추가정보"
            android:textColor="@color/color_primary_blue"
            app:fontPath="fonts/NanumSquareOTFRegular.otf" />


        <LinearLayout
            android:id="@+id/linear_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="성별"
                android:textColor="#000000"
                android:textSize="20dp"
                app:fontPath="fonts/NanumSquareOTFRegular.otf" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="남자"
                android:textColor="@color/gray"
                android:textSize="18dp"
                app:fontPath="fonts/NanumSquareOTFRegular.otf" />


        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/xml_save_button"
        android:enabled="false"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:fontPath="fonts/NanumSquareOTFRegular.otf" />


</FrameLayout>