<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginTop="@dimen/cardMarginVertical"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/profileMarginTop"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            android:layout_marginBottom="@dimen/cardMarginVertical" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_exerciseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profileMarginTop"
                    android:paddingLeft="5dp"
                    android:paddingTop="2.5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2.5dp"
                    android:text="요가"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:fontPath="fonts/NanumSquareOTFBold.otf" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/bodyPart_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/profileMarginTop"
                    android:paddingLeft="5dp"
                    android:paddingTop="2.5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2.5dp"
                    android:text="체형교정"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:fontPath="fonts/NanumSquareOTFBold.otf" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/bodyPart_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/profileMarginTop"
                    android:paddingLeft="5dp"
                    android:paddingTop="2.5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2.5dp"
                    android:text="체중감량"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:fontPath="fonts/NanumSquareOTFBold.otf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="13"
                    android:text="3주만에 애플힙 만들기 운동"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    app:fontPath="fonts/NanumSquareOTFBold.otf" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    app:fontPath="fonts/NanumSquareOTFBold.otf" />


                <ImageView
                    android:id="@+id/img_level_icon01"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/dumbell" />

                <ImageView
                    android:id="@+id/img_level_icon02"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/dumbell" />

                <ImageView
                    android:id="@+id/img_level_icon03"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/dumbell" />


            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/frame_layout_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_more"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/more"
                android:clickable="false"
                android:gravity="right" />

        </FrameLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

